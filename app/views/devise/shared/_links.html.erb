<details class='mt-2'>
  <summary><%= t('my_devise.problem_with_account') %></summary>
  <% if controller_name != 'sessions' %>
    <%= link_to t('my_devise.sign_in'), new_session_path(resource_name) %><br />
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'my_registrations' %>
    <%= link_to t('my_devise.register'), new_registration_path(resource_name) %><br />
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('my_devise.forgot_password'), new_password_path(resource_name) %><br />
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'my_confirmations' %>
    <%= link_to t('my_devise.did_not_receive_confirmation_instructions'), new_confirmation_path(resource_name) %><br />
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('my_devise.did_not_receive_unlock_instructions'), new_unlock_path(resource_name) %><br />
  <% end %>
</details>
