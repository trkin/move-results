<% login_layout %>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, label: t('my_devise.new_password'), autofocus: true, autocomplete: "off" %>
  <% if @minimum_password_length %>
    <em><%= t 'my_devise.characters_minimum', count: @minimum_password_length %></em>
  <% end %>

  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <%= f.submit t('update'), class: 'btn btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/links" %>
