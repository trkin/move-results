<div data-controller='flash' data-flash-message='<%= j notice %>'>
  <div data-test='notice-holder' class='d-none-opacity'><%= notice %></div>
  <% if notice.present? %>
    <button class='flash-notice-alert-repeat' data-action='flash#show' title='<%= t('last_message') %>'><i class="demo-icon icon-cw"></i>
</button>
  <% end %>
</div>
<div data-controller='flash' data-flash-message='<%= j alert %>' data-flash-alert='true'>
  <div data-test='alert-holder' class='d-none-opacity'><%= alert %></div>
  <% if alert.present? %>
    <button class='flash-notice-alert-repeat' data-action='flash#show' title='<%= t('last_message') %>'><i class="demo-icon icon-cw"></i>
  <% end %>
</div>
